// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int    @id @default(autoincrement())
  first_name String
  last_name  String
  email      String @unique
  user_type  String
  is_admin   Int
  password   String
  img        String
  role_id    Int
  client_id  Int
}

model Projects {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  start_date  DateTime?
  deadline    DateTime?
  created_at  DateTime  @default(now())
  created_by  Int
  status_id   Int       @default(1)
  assigned_to Int?
}

model Project_status {
  id    Int    @id @default(autoincrement())
  title String
  icon  String
}

model Tasks {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  project_id  Int
  assignedTo  Int
  start_date  DateTime
  deadline    DateTime
  CreatedAt   DateTime
  CreatedBy   Int
  status      String
  status_id   Int
}
